<Project>
  
  <ItemGroup>
    <!--
      This copies the .sql files from the output directory (e.g. bin/Debug/net8.0) to the publish directory.
      This also includes the subdirectories in which the .sql files are located.
      The .sql files will be copied to a directory called "yesql".
    -->
    <Content
      Include="bin\$(Configuration)\$(TargetFramework)\yesql\**"
      CopyToPublishDirectory="PreserveNewest"
      TargetPath="yesql\%(RecursiveDir)\%(Filename)%(Extension)"
    />
    <!-- 
      The publish directory contains the assemblies ready for deployment to 
      a hosting system (for example, a server, PC, laptop) for execution.
    -->
  </ItemGroup>
  
</Project>